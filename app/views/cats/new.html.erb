<h1>New Cat</h1>
<br>
<form action="/cats" method="post">
    <input type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

    <label for="cat_name">Name</label>
    <input type="text" name="cat[name]" id="cat_name">
    <br>

    <label for="birth_date">Birth Date</label>
    <input type="date" name="cat[birth_date]" id="birth_date">
    <br>

    <label for="color">Color</label>
    <select name="cat[color]" id="color">
        <option value="none" selected disabled hidden></option>
        <option value="black">Black</option>
        <option value="white">White</option>
        <option value="orange">Orange</option>
        <option value="brown">Brown</option>
    </select>
    <br>

    <input type="radio" id="female" name="cat[sex]" value="F">
    <label for="female">Female</label>
    <input type="radio" name="cat[sex]" value="M" id="male">
    <label for="male">Male</label>
    <br>

    <label for="description">Description</label>
    <br>
    <textarea name="cat[description]" id="description" cols="30" rows="10"></textarea>
    <br><br>

    <input type="submit" value="Create cat!">
</form>