<h1><%= @current_cat.name %></h1>
<table>
    <tr>
        <th>Attribute</th>
        <th>Value</th>
    </tr>
    <tr>
        <td>Age</td>
        <td><%= @current_cat.age %></td>
    </tr>
    <tr>
        <td>Birth_Date</td>
        <td><%= @current_cat.birth_date %></td>
    </tr>
    <tr>
        <td>color</td>
        <td><%= @current_cat.color %></td>
    </tr>
    <tr>
        <td>sex</td>
        <td><%= @current_cat.sex %></td>
    </tr>
</table>

<h1>Rental Requests</h1>
<table>
    <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
    </tr>
    <% @current_cat.rental_requests.each do |request| %>
        <tr>
            <td><%= request.start_date %></td>
            <td><%= request.end_date %></td>
            <td><%= request.status %></td>
        </tr>
    <% end %>
</table>